<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_elevation">
    <RelativeLayout
        android:background="@color/whiteNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/content_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>
        <LinearLayout
            android:layout_below="@id/content_img"
            android:paddingTop="@dimen/sii_card_info_padding_top"
            android:paddingBottom="@dimen/sii_card_info_padding_top"
            android:paddingLeft="@dimen/sii_card_info_padding_left"
            android:paddingRight="@dimen/sii_card_info_padding_left"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/sii_card_title"
                android:textSize="@dimen/sii_card_info_text_title"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sii_card_info_text_price"
                android:textColor="@color/sii_card_price"
                android:singleLine="true" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sii_card_info_text_location"
                android:textColor="@color/sii_card_location"
                android:singleLine="true" />
        </LinearLayout>
    </RelativeLayout>
    </android.support.v7.widget.CardView>