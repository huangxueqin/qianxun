<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.secondhandstreet.camera.CameraPreview
        android:id="@+id/camera_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.example.secondhandstreet.camera.CameraDrawingView
        android:id="@+id/camera_drawing_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"/>

    <RelativeLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <HorizontalScrollView
            android:id="@+id/scroll_gallery"
            android:background="@color/pic_holder_background"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gallery_height">
            <LinearLayout
                android:id="@+id/pic_holder"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:divider="@android:color/transparent"
                android:dividerPadding="6dp"/>
        </HorizontalScrollView>
        <RelativeLayout
            android:background="@color/func_area_background"
            android:layout_below="@id/scroll_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:text="@string/camera_cancel"
                android:textColor="@color/camera_text_color"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="@drawable/camera_text_background"
                android:id="@+id/cancel"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:text="@string/camera_confirm"
                android:textColor="@color/camera_text_color"
                android:background="@drawable/camera_text_background"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:id="@+id/confirm"/>
            <ImageButton
                android:id="@+id/take_pic_button"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/camera_button_size"
                android:layout_height="@dimen/camera_button_size"
                android:layout_marginTop="@dimen/camera_button_margining_top"
                android:layout_marginBottom="@dimen/camera_button_margining_bottom"
                android:background="@null"
                android:src="@drawable/camera_button_sel"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                />
        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>